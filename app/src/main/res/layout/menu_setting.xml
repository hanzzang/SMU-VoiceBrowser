<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_low"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/ll_dialog">

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/dialog_white"
        android:gravity="center_horizontal"
        android:text="사용자 유형"
        android:textColor="@color/colorOldBack"
        android:textSize="40sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/dialog_white">

        <RadioButton
            android:id="@+id/rb_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:buttonTint="@color/colorOldBack"
            android:text="저시력"
            android:textColor="@color/colorOldBack"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/rb_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:buttonTint="@color/colorOldBack"
            android:text="노안"
            android:textColor="@color/colorOldBack"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/rb_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:buttonTint="@color/colorOldBack"
            android:text="일반"
            android:textColor="@color/colorOldBack"
            android:textSize="40sp" />
    </RadioGroup>

    <!--   <View
            android:id="@+id/target_view"
            android:background="@color/colorBlackTransparency"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:visibility="visible"/>-->


</LinearLayout>